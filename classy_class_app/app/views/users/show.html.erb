<% provide(:title, @user.name) %>

<h1>
  <% #gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
	<% @schedule = Schedule.where(belongs_to_user: current_user.id).first %>
	<% @days = Day.where(belongs_to_schedule: @schedule.id) %>
	<% @days.each do |day| %>
	<div class="span6">
		<table class="table table-striped">
			<h2>Day <%= day.number %></h2>
			<thead>
				<tr>
					<th>Period</th>
					<th>Class</th>
					<th>Teacher</th>
					<th>Duration</th>
				</tr>
			</thead>
			<tbody>
			<% @counter = 1 %>
			<% ClassyClass.all.each do |classy| %>
				<% if classy.belongs_to_day == day.id %>
					<tr>
						<td><%= @counter %></td>
						<td><%= classy.name %></td>
						<td><%= classy.teacher %></td>
						<td><%= classy.duration %><td>
					</tr>
					<% @counter = @counter + 1 %>
				<% end %>
			<% end %>
				</tbody>
			</table>
		</div>
	<% end %>
</div>