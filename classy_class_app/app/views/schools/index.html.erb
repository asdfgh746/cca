<% provide(:title, 'Select school') %>

<%= form_for @user do |f| %>
  
  <%= f.label :belongs_to_school, "School" %>
  <%= f.select :belongs_to_school, options_for_select(@schools_for_form) %>

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
  <%= link_to "Other", add_schedule_path %>
<% end %>