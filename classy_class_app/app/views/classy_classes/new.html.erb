
<%= form_for :classy_class, url: create_class_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :teacher %>
  <%= f.text_field :teacher %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

	<% if @schedule = Schedule.where(belongs_to_user: current_user.id).first %>
	<% @days = Day.where(belongs_to_schedule: @schedule.id) %>
	
    <%= f.label :belongs_to_day, "Day" %>
		<%= collection_select(:classy_class, :belongs_to_day, @days, :id, :number) %>

	<% end %>

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>