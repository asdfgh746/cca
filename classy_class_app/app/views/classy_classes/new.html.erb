
<%= form_for :classy_class, url: create_class_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :teacher %>
  <%= f.text_field :teacher %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

	<% if @schedule = Schedule.where(belongs_to_user: current_user.id).first %>

    <% @days = Day.where(belongs_to_schedule: @schedule.id) %>

    <% @blocks = [] %>

    <% @days.each do |day| %>
      <% @blocks_for_day = day.order_of_blocks.split(",").collect %>

      <% @blocks_for_day.each do |block| %>
        <% @blocks << block %>
      <% end %> 
    <% end %>
  
    <% @blocks = @blocks.uniq %>
    <% @blocks.sort_by!{ |m| m } %>

    <% @blocks_for_form = [] %>
    <% @blocks.each do |block| %>
      <% @dupe = [block, block] %>
      <% @blocks_for_form << @dupe %> 
    <% end %>

    <%= f.label :block, "Block" %>
    <%= select_tag(:block, options_for_select(@blocks_for_form)) %>

	<% end %>

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>